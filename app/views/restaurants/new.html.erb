<h1>New restaurant</h1>

<%= simple_form_for [@restaurant] do |f| %>

<p><%= f.input :name %></p>
<p><%= f.input :address %></p>
<p><%= f.input :phone_number %></p>
<p><%= f.input :category, collection: Restaurant::CATEGORIES, prompt: "Choose a category" %></p>
<%= f.submit "add a restaurant", class: "btn btn-primary" %>
<% end %>
